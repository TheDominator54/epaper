[Unit]
Description=e-Paper photo display server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
# Change to User=root if SPI/GPIO fails as your user
User=dominic
WorkingDirectory=REPO_DIR
ExecStart=/usr/bin/python3 REPO_DIR/display_photo.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
